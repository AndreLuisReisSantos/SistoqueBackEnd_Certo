{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./dist/**/*"
    ],
    "compilerOptions": {
        "declaration": true,
        "pretty": true,
        "target": "es2018",
        "module": "CommonJS",
        "lib": [
            "es2018",
            "esnext.asynciterable"
        ],
        "checkJs": false,
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "removeComments": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@controller/*": [
                "./controllers/*"
            ],
            "@models/*": [
                "./models/*"
            ],
            "@services/*": [
                "./services/*"
            ],
            "@generated/*": [
                "../prisma/generated/*"
            ]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    }
}